<p id="notice"><%= notice %></p>
<div class="jumbotron">

<h1>Groups</h1>

<table class="table table-sm table-light">
  <thead>
    <tr>
      <th>Name</th>
      <th>Semestr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.semestr %></td>
        <td><%= link_to 'Show', group, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

 <%= render partial:'form', locals: {group: Group.new} %>



</div>